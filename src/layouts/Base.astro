<style>
	/* @import '@glidejs/glide/dist/css/glide.core.min.css'; */

	/* Custom CSS for the particle wrapper */
	.particle-wrapper {
			will-change: opacity, transform;
			opacity: 0.56405;
			transform: translate3d(0px, 0px, 0px) scale3d(2.15393, 2.15393, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg);
			transform-style: preserve-3d;
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: linear-gradient(to bottom, #ffffff, #000000);
			z-index: -1;
	}

	.particle-wrapper div {
			will-change: transform;
			transform-style: preserve-3d;
	}

	/* Custom CSS for the hero section */
	.hero {
			background-color: transparent;
			/* Set the background to transparent */
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
			overflow: hidden;
			position: relative;
	}
	#background-video {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			object-fit: cover;
			z-index: -1; /* Place the video behind other content */
	}

	/* Create a black opacity overlay */
	.overlay {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-color: rgba(0, 0, 0, 0.5); /* Adjust opacity here (0.5 = 50% opacity) */
			z-index: 1; /* Place the overlay above the video */
	}

	.gradient-text {
			background: linear-gradient(to right, #000000, #757575);
			-webkit-background-clip: text;
			background-clip: text;
			color: transparent;
			text-align: center;
	}

	.text-underline {
			text-decoration: underline;
	}
	/* Apply Pirata One font to elements with a class of "pirata-font" */
.pirata-font {
	font-family: 'Pirata One', sans-serif;
}
		/* CSS for the video container */
		#background-video {
			position: fixed;
			top: 0;
			left: 0;
			min-width: 100%;
			min-height: 100%;
			z-index: -1; /* Place it behind other content */
		}
</style>
